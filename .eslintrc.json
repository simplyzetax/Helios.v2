{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "prettier"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "prettier"],
    "rules": {
        "no-dupe-args": "error",
        "no-dupe-keys": "error",
        "require-await": "error",
        "no-fallthrough": 2
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}
